# Umbra Quickstart Devnet Environment Template
# Copy to .env.devnet (or your secret manager + CI vars).
# Do NOT commit real secrets.

########################
# Core versions/images #
########################
DAML_RUNTIME_VERSION=3.4.10
SPLICE_VERSION=0.5.3
SCRIBE_VERSION=0.6.15
JAVA_VERSION=21-jdk
OTEL_AGENT_VERSION=2.10.0

# Optional image overrides
IMAGE_REPO=
IMAGE_TAG=

################
# Network/ports #
################
DOCKER_NETWORK=quickstart-devnet
BACKEND_PORT=8080
SWAGGER_UI_PORT=9090
APP_PROVIDER_UI_PORT=3000
APP_USER_UI_PORT=2000
SV_UI_PORT=4000

# Monitoring/observability ports (if enabled)
OBSERVABILITY_ENABLED=true
PROMETHEUS_PORT=9091
GRAFANA_VERSION=latest
LOKI_PORT=3100
TEMPO_PORT=3200

###########################
# Runtime mode / quickstart
###########################
AUTH_MODE=oauth2
PARTY_HINT=quickstart-devnet-1
TEST_MODE=off
LATEST_PACKAGES_ONLY=true

################
# Auth / OAuth2 #
################
